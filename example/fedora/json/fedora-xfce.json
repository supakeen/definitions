{
  "always": {
    "packages": {
      "include": [
        "@xfce-desktop-environment",
        "@xfce-apps",
        "@xfce-extra-plugins",
        "@xfce-media",
        "@xfce-office",
        "wget",
        "system-config-printer"
      ],
      "exclude": [
        "autofs",
        "acpid",
        "gimp-help",
        "desktop-backgrounds-basic",
        "xfce4-sensors-plugin",
        "xfce4-eyes-plugin"
      ]
    }
  },
  "format": {
    "installer-live": {
      "filename": "fedora-xfce.iso",
      "packages": {
        "exclude": [
          "@dial-up",
          "@input-methods",
          "@standard",
          "gfs2-utils",
          "reiserfs-utils",
          "fcoe-utils",
          "device-mapper-multipath"
        ],
        "include": [
          "kernel",
          "kernel-modules",
          "kernel-modules-extra",
          "anaconda",
          "anaconda-install-env-deps",
          "anaconda-live",
          "@anaconda-tools",
          "aajohan-comfortaa-fonts",
          "dracut-live",
          "glibc-all-langpacks",
          "livesys-scripts"
        ]
      },
      "files": {
        "/etc/sysconfig/desktop": {
          "content": "PREFERRED=/usr/bin/startxfce4\nDISPLAYMANAGER=/usr/sbin/lightdm"
        },
        "/etc/sysconfig/livesys": {
          "content": "'livesys_session=\"xfce\"'"
        }
      },
      "systemd": {
        "services": {
          "enable": [
            "livesys.service",
            "livesys-late.service",
            "tmp.mount"
          ]
        }
      }
    },
    "vhd": {
      "filename": "disk.vhd",
      "filesize": 2147483648,
      "packages": {
        "include": [
          "@core",
          "chrony",
          "langpacks-en",
          "net-tools",
          "ntfsprogs",
          "libxcrypt-compat",
          "initscripts",
          "glibc-all-langpacks"
        ],
        "exclude": [
          "dracut-config-rescue",
          "geolite2-city",
          "geolite2-country",
          "zram-generator-defaults"
        ]
      },
      "systemd": {
        "services": {
          "enable": [
            "sshd.service"
          ],
          "disable": [
            "proc-sys-fs-binfmt_misc.mount",
            "loadmodules.service"
          ]
        }
      }
    },
    "qcow2": {
      "filename": "disk.qcow2",
      "filesize": 5368709120,
      "packages": {
        "include": [
          "chrony",
          "langpacks-en",
          "qemu-guest-agent"
        ],
        "exclude": [
          "dracut-config-rescue",
          "firewalld",
          "geolite2-city",
          "geolite2-country",
          "plymouth"
        ]
      },
      "systemd": {
        "services": {
          "enable": [
            "cloud-init.service",
            "cloud-config.service",
            "cloud-final.service",
            "cloud-init-local.service"
          ]
        }
      }
    },
    "vmdk": {
      "filename": "disk.vmdk",
      "filesize": 2147483648,
      "packages": {
        "include": [
          "chrony",
          "systemd-udev",
          "langpacks-en",
          "open-vm-tools"
        ],
        "exclude": [
          "dracut-config-rescue",
          "etables",
          "firewalld",
          "geolite2-city",
          "geolite2-country",
          "gobject-introspection",
          "plymouth",
          "zram-generator-defaults",
          "grubby-deprecated",
          "extlinux-bootloader"
        ]
      }
    },
    "ova": {
      "filename": "disk.ova",
      "filesize": 2147483648,
      "packages": {
        "include": [
          "chrony",
          "systemd-udev",
          "langpacks-en",
          "open-vm-tools"
        ],
        "exclude": [
          "dracut-config-rescue",
          "etables",
          "firewalld",
          "geolite2-city",
          "geolite2-country",
          "gobject-introspection",
          "plymouth",
          "zram-generator-defaults",
          "grubby-deprecated",
          "extlinux-bootloader"
        ]
      }
    }
  }
}